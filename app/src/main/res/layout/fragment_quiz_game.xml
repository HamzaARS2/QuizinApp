<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#241c5c"
    android:fitsSystemWindows="true"
    android:theme="@style/AppThemeWithoutFont"
    tools:context=".ui.fragments.quiz.QuizGameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quiz_game_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="@drawable/explore_bg_shape"
        android:paddingHorizontal="@dimen/_8sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar2"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/quiz_game_time_circluar_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="#B80FF6"
            app:indicatorSize="@dimen/_55sdp"
            app:layout_constraintBottom_toTopOf="@+id/quiz_game_remaining_questions_tv"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:trackColor="#E8E3A8FA"
            app:trackThickness="@dimen/_28sdp" />

        <TextView
            android:id="@+id/quiz_progress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:text="00"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/quiz_game_time_circluar_progress"
            app:layout_constraintEnd_toEndOf="@+id/quiz_game_time_circluar_progress"
            app:layout_constraintStart_toStartOf="@+id/quiz_game_time_circluar_progress"
            app:layout_constraintTop_toTopOf="@+id/quiz_game_time_circluar_progress" />

        <TextView
            android:id="@+id/quiz_game_remaining_questions_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="@dimen/_2sdp"
            android:text="Question 0 of 0"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toTopOf="@+id/quiz_game_question_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quiz_game_time_circluar_progress" />

        <TextView
            android:id="@+id/quiz_game_question_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:lines="2"
            android:maxLines="2"
            android:padding="@dimen/_7sdp"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="@+id/quiz_game_remaining_questions_tv"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/quiz_game_remaining_questions_tv"
            app:layout_constraintTop_toBottomOf="@+id/quiz_game_remaining_questions_tv" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/answer_confirm_btn"
            app:layout_constraintEnd_toEndOf="@+id/quiz_game_question_tv"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/quiz_game_question_tv"
            app:layout_constraintTop_toBottomOf="@+id/quiz_game_question_tv">

            <RadioButton
                android:id="@+id/quiz_game_answer1_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/quiz_answer_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/quiz_game_answer2_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/quiz_answer_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/quiz_game_answer3_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/quiz_answer_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/quiz_game_answer4_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/quiz_answer_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/answer_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:enabled="true"
            android:fontFamily="@font/fredoka_one"
            android:padding="@dimen/_7sdp"
            android:text="@string/confirm"
            android:textSize="@dimen/_16ssp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline76"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <Button
            android:id="@+id/answer_next_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/fredoka_one"
            android:text="@string/next"
            android:textSize="@dimen/_16ssp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/answer_confirm_btn"
            app:layout_constraintEnd_toEndOf="@+id/answer_confirm_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/answer_confirm_btn"
            app:layout_constraintTop_toTopOf="@+id/answer_confirm_btn" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="7:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_1sdp"
                app:cardBackgroundColor="#0A0D27"
                app:cardCornerRadius="@dimen/_6sdp"
                app:contentPadding="@dimen/_3sdp"
                app:layout_constraintBottom_toTopOf="@+id/cardview11"
                app:layout_constraintEnd_toStartOf="@+id/guideline23"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:src="@drawable/correct" />

                    <TextView
                        android:id="@+id/quiz_game_correct_answers_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="00"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview11"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_1sdp"
                app:cardBackgroundColor="#0A0D27"
                app:cardCornerRadius="@dimen/_6sdp"
                app:contentPadding="@dimen/_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline23"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:src="@drawable/wrong" />

                    <TextView
                        android:id="@+id/quiz_game_wrong_answers_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:text="00"
                        android:textSize="@dimen/_11ssp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/quiz_game_linear_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:indeterminate="false"
                android:max="3"
                android:progress="0"
                app:indicatorColor="#B80FF6"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="@+id/guideline23"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="#E8E3A8FA"
                app:trackCornerRadius="@dimen/_6sdp"
                app:trackThickness="@dimen/_8sdp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/_6sdp"
                app:cardBackgroundColor="#0A0D27"
                app:cardCornerRadius="@dimen/_6sdp"
                app:contentPadding="@dimen/_3sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline24"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:src="@drawable/trophy"
                        app:layout_constraintBottom_toBottomOf="@+id/quiz_game_trophies_tv"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/quiz_game_trophies_tv" />

                    <TextView
                        android:id="@+id/quiz_game_trophies_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/material_motion_duration_medium_1"
                        android:fontFamily="@font/fredoka_one"
                        android:gravity="center"
                        android:lines="1"
                        android:text="000"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/imageView10"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.MaterialToolbar>

</androidx.constraintlayout.widget.ConstraintLayout>